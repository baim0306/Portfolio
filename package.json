{
  "name": "frontend",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "server": "nodemon backend/app.js",
    "client": "npm run dev --prefix frontend",
    "wait-and-start": "wait-on http-get://localhost:5000/api/test && npm run client",
    "dev": "concurrently \"npm run server\" \"npm run wait-and-start\""
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind": "^4.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  }
}
